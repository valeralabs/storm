{
  "name": "@syvita/storm",
  "version": "0.5.1",
  "description": "CLI authenticator for Stacks CLI apps",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/syvita/storm.git"
  },
  "scripts": {
    "preinstall": "pnpm build:prod",
    "format": "prettier --write . --loglevel silent",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm format && esbuild index.js --bundle --sourcemap --platform=node --external:keytar --external:micro-stacks --format=cjs --outdir=build",
    "build:prod": "esbuild index.js --bundle --minify --platform=node --external:keytar --external:micro-stacks --format=cjs --outdir=build",
    "start": "pnpm build && node build/index.js",
    "i2p": "pnpm build:prod && pnpm i -g",
    "launch": "pnpm publish --access=public"
  },
  "author": "Asteria <asteria@syvita.org>",
  "license": "ISC",
  "dependencies": {
    "@noble/hashes": "0.4.1",
    "@noble/secp256k1": "1.3.0",
    "@stacks/wallet-sdk": "2.0.1",
    "chalk": "4.1.2",
    "chalk-animation": "1.6.0",
    "commander": "8.3.0",
    "conf": "10.1.0",
    "esbuild": "^0.14.0",
    "keytar": "7.7.0",
    "micro-stacks": "0.1.3",
    "node-fetch": "3.1.0",
    "ora": "6.0.1",
    "prompts": "2.4.2",
    "search-array": "1.3.2",
    "table": "6.7.3",
    "which": "2.0.2"
  },
  "bin": {
    "storm": "build/index.js"
  },
  "devDependencies": {
    "pnpm": "6.23.2",
    "prettier": "2.5.0"
  }
}
